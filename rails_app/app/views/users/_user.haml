%td= link_to(h(user.name), reviewed_reports_user_path(user))
%td= h user.email
%td= user.is_admin? ? "Yes" : ""
%td= user.is_terminated? ? "Yes" : ""
%td
  - if user.is_admin?
    = link_to_remote "Revoke Admin Priv", {:url => edit_admin_user_path(user), :method => :post}
  - else
    = link_to_remote "Promote to admin", {:url => edit_admin_user_path(user), :method => :post}
%td
  - if user.is_terminated?
    = link_to_remote "Unterminate", {:url => edit_terminate_user_path(user), :method => :post}
  - else
    = link_to_remote "Terminate", {:url => edit_terminate_user_path(user), :method => :post}
%td= user.reports_count